<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-tables" author="developer">
        <createTable tableName="country">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="category">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="price" type="DOUBLE"/>
            <column name="description" type="VARCHAR(255)"/>

            <column name="category_id" type="BIGINT">
                <constraints foreignKeyName="fk_product_category" references="category(id)"/>
            </column>
            <column name="country_id" type="BIGINT">
                <constraints foreignKeyName="fk_product_country" references="country(id)"/>
            </column>
        </createTable>

        <createTable tableName="product_countries">
            <column name="product_id" type="BIGINT">
                <constraints foreignKeyName="fk_pc_product" references="product(id)"/>
            </column>
            <column name="countries_id" type="BIGINT">
                <constraints foreignKeyName="fk_pc_country" references="country(id)"/>
            </column>
        </createTable>

        <createTable tableName="t_permissions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
        </createTable>

        <createTable tableName="t_users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="t_users_permissions">
            <column name="user_model_id" type="BIGINT">
                <constraints foreignKeyName="fk_users_permissions_user"-------- references="t_users(id)"/>
            </column>
            <column name="permissions_id" type="BIGINT">
                <constraints foreignKeyName="fk_users_permissions_permission" references="t_permissions(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>